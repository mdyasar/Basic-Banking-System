<%- include("partials/header", {page: "new-customer"}); %>

<div class="h-bg">
  <h1>Add a New Customer</h1>
</div>

<div class="container mt-5">

  <!-- If error in saving a new customer. -->
  <% if (fail != "") { %>
  <div class="alert alert-danger" role="alert"><%= fail %></div>
  <% } %>
  
  <div class="row row-t">
    <div class="col">
      <!-- Form for adding new customer. -->
      <form action="/add-customer" method="post">

        <div class="form-floating mt-5 mb-3">
          <input
            type="number"
            class="form-control"
            id="floatingInput"
            name="accountNo"
            min="110"
          />
          <label for="floatingInput">Account Number(110XXXX)</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="email"
            class="form-control"
            id="floatingInput"
            name="email"
          />
          <label for="floatingInput">Email ID</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="floatingInput"
            name="name"
          />
          <label for="floatingInput">Name</label>
        </div>

        <div class="form-check form-check-inline mb-3">
          <input
            class="form-check-input"
            type="radio"
            name="gender"
            id="inlineRadio1"
            value="Male"
          />
          <label class="form-check-label" for="inlineRadio1">Male</label>
        </div>

        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="gender"
            id="inlineRadio2"
            value="Female"
          />
          <label class="form-check-label" for="inlineRadio2">Female</label>
        </div>

        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="gender"
            id="inlineRadio3"
            value="other"
          />
          <label class="form-check-label" for="inlineRadio3">Other</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="number"
            class="form-control"
            id="floatingInput"
            name="balance"
            step="100"
          />
          <label for="floatingInput">Balance(Multiple of 100)</label>
        </div>

        <div class="text-center">
          <button class="btn btn-outline-success" type="submit">
            Add Customer
          </button>
        </div>

      </form>
    </div>
    
    <div class="col">
      <img
        src="/img/customers.jpg"
        alt=""
        style="width: 100%; height: 100%; object-fit: contain"
      />
    </div>
  </div>
</div>

<%- include("partials/footer"); %>
